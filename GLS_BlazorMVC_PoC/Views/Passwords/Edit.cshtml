@model GLS_BlazorMVC_PoC.Models.Password

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Password</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EncryptedPassword" class="control-label"></label>
                <input asp-for="EncryptedPassword" class="form-control" value="@GLS_BlazorMVC_PoC.Helpers.Encryptor.Decrypt(Model.EncryptedPassword)"/>
                <span asp-validation-for="EncryptedPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
